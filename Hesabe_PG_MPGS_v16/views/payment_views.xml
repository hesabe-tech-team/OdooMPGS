<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Hesabe MPGS form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'Hesabe_PG_MPGS_v16')]}">
                    <field name="merchant_code" attrs="{'required':[ ('code', '=', 'Hesabe_PG_MPGS_v16'), ('state', '!=', 'disabled')]}"/>
                    <field name="access_code" attrs="{'required':[ ('code', '=', 'Hesabe_PG_MPGS_v16'), ('state', '!=', 'disabled')]}"/>
                    <field name="secret_key" attrs="{'required':[ ('code', '=', 'Hesabe_PG_MPGS_v16'), ('state', '!=', 'disabled')]}"/>
                    <field name="iv_key" attrs="{'required':[ ('code', '=', 'Hesabe_PG_MPGS_v16'), ('state', '!=', 'disabled')]}"/>
                    <field name="api_version" attrs="{'required':[ ('code', '=', 'Hesabe_PG_MPGS_v16'), ('state', '!=', 'disabled')]}"/>
                    <field name="production_url" attrs="{'required':[ ('code', '=', 'Hesabe_PG_MPGS_v16'), ('state', '!=', 'disabled')]}"/>
                    <field name="sandbox_url" attrs="{'required':[ ('code', '=', 'Hesabe_PG_MPGS_v16'), ('state', '!=', 'disabled')]}"/>
                </group>
            </group>
        </field>
    </record>

</odoo>

